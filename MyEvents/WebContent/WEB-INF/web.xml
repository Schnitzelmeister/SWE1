<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>MyEvents</display-name>
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>
   
  <servlet>
    <servlet-name>CalendarJsonServlet</servlet-name>
    <servlet-class>servlets.CalendarJsonServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>loaddata</servlet-name>
    <servlet-class>servlets.LoadDataServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NewTermin</servlet-name>
    <servlet-class>servlets.CreateNewTerminServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>manageuserdata</servlet-name>
    <servlet-class>servlets.ManageUserDataServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/MyEvents/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/MyEvents/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/MyEvents/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NewTermin</servlet-name>
    <url-pattern>/MyEvents/privatnutzer/NewTermin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>manageuserdata</servlet-name>
    <url-pattern>/MyEvents/privatnutzer/manageuserdata</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>loaddata</servlet-name>
    <url-pattern>/MyEvents/privatnutzer/loaddata</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CalendarJsonServlet</servlet-name>
    <url-pattern>/MyEvents/CalendarJsonServlet</url-pattern>
  </servlet-mapping>
  
</web-app>